<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transaction_cardView"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="35dp"
    app:cardBackgroundColor="@color/BiruLangit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageMed_transaction"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:src="@color/white" />

        <TextView
            android:id="@+id/NameMed_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageMed_transaction"
            android:fontFamily="@font/inter_semibold"
            android:text="Nama Medicine"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/price_trans"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="24dp"
            android:layout_toEndOf="@+id/NameMed_trans"
            android:fontFamily="@font/inter_bold"
            android:maxLines="1"
            android:text="Price"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/quantity_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NameMed_trans"
            android:layout_marginStart="86dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="46dp"
            android:layout_toEndOf="@+id/imageMed_transaction"
            android:fontFamily="@font/inter"
            android:text="1"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/date_trans"
            android:layout_width="135dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="106dp"
            android:layout_toEndOf="@+id/imageMed_transaction"
            android:fontFamily="@font/inter"
            android:text="Tanggal"
            android:textColor="@color/AbuTua"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/quantity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="37dp"
            android:layout_toEndOf="@+id/imageMed_transaction"
            android:text="Quantity : " />

        <TextView
            android:id="@+id/total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quantity_tv"
            android:layout_marginStart="127dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Total Price"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <android.widget.Button
            android:id="@+id/delete_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/delete_trans" />

        <android.widget.Button
            android:id="@+id/update_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/edit"
            android:backgroundTint="@color/SageGreen"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>