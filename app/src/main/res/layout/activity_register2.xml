<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@drawable/latar">

    <ImageView
        android:id="@+id/logoRegis"
        android:layout_width="296dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_bluejack_pharmacy" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="404dp"
        android:layout_height="616dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/RegisterText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Register"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Looks like you don’t have an account."
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Let’s create your account"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/name_edt"
            android:layout_width="341dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edit_text"
            android:elevation="5dp"
            android:hint="Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/phoneNum_edt"
            android:layout_width="341dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edit_text"
            android:elevation="5dp"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="10dp"
            android:textColorHighlight="@color/cardview_dark_background"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/email_edt"
            android:layout_width="341dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edit_text"
            android:elevation="5dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColorHighlight="@color/cardview_dark_background"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/password_edt"
            android:layout_width="341dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edit_text"
            android:elevation="5dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHighlight="@color/cardview_dark_background"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/confirmPass_edt"
            android:layout_width="341dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edit_text"
            android:elevation="5dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="14sp" />

        <android.widget.Button
            android:id="@+id/button_regis"
            android:layout_width="147dp"
            android:layout_height="60dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:text="Register"
            android:background="@drawable/custom_edit_text"
            android:backgroundTint="@color/Biru1"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/white"
            android:elevation="5dp"/>

        <TextView
            android:id="@+id/or_regis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or"
            android:fontFamily="@font/roboto_mono"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/already_regis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:fontFamily="@font/roboto_medium"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <android.widget.Button
            android:id="@+id/login_button_regis"
            android:layout_width="234dp"
            android:layout_height="60dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_goto"
            android:clickable="true"
            android:fontFamily="@font/roboto_bold"
            android:shadowColor="@color/black"
            android:text="Go to Login Page"
            android:textColor="@color/Biru1"
            android:textSize="14sp"
            android:elevation="10dp"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>